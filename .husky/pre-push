
husky_directory_path=$(dirname -- "$0")
repository_path=$(pwd)
. "$repository_path/scripts/protect-default-branch.sh"

pids=()
# すべてのチェックに成功しないとgit pushできないようにする
commands=(
  "pnpm lint:cache"
  "pnpm fmt"
  "pnpm typecheck"
  "pnpm spellcheck"
  # "pnpm find-deadcode"
)

for command in "${commands[@]}"; do
  ${command} &
  pids+=($!)
done

for pid in ${pids[@]}; do
  wait $pid
  if [ $? -ne 0 ]; then
    exit 1
  fi
done

